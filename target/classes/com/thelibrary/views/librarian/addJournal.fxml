<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thelibrary.controller.JournalController">
   <children>
      <VBox layoutX="14.0" layoutY="32.0" prefHeight="311.0" prefWidth="200.0" spacing="20.0">
         <children>
            <TextField fx:id="nameTxt" promptText="Name" />
            <TextField fx:id="authorTxt" promptText="Author" />
            <TextField fx:id="publicationYearTxt" promptText="Publication Year" />
            <TextField fx:id="areaofstudyTxt" promptText="Area of Study" />
            <TextField fx:id="citationsTxt" promptText="Citations" />
         </children>
      </VBox>
      <VBox layoutX="221.0" layoutY="32.0" prefHeight="311.0" prefWidth="200.0" spacing="20.0">
         <children>
            <TextField fx:id="volumeTXT" promptText="Volume" />
            <TextField fx:id="issueTXT" promptText="Issue" />
            <Button layoutX="10.0" layoutY="159.0" mnemonicParsing="false" onAction="#selectImage" styleClass="btnStyle" text="Select Image" />
            <Button mnemonicParsing="false" onAction="#selectDocument" styleClass="btnStyle" text="Select Document" />
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#addJournal" styleClass="btnStyle" text="Save" />
         </children>
      </VBox>
      <ImageView fx:id="journalCover" fitHeight="270.0" fitWidth="200.0" layoutX="427.0" layoutY="32.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="documentLbl" layoutX="427.0" layoutY="316.0" text="Label" visible="false" wrapText="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
